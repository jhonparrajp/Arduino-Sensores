<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE RSyntaxTheme SYSTEM "theme.dtd">

<!--
  Arduino Dark theme
  Tauno Erik
  https://taunoerik.art
  https://github.com/taunoe/arduino-dark-theme
